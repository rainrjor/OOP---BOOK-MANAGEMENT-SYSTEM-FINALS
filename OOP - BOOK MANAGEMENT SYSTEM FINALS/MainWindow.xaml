<Window x:Class="oop_finals_draft.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:oop_finals_draft"
        mc:Ignorable="d"
       Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Label Content="Book Management System" HorizontalAlignment="Left" Margin="295,11,0,0" VerticalAlignment="Top" Height="45" Width="306" FontSize="25"/>

        <Label Content="Select:" HorizontalAlignment="Left" Margin="156,26,0,0" VerticalAlignment="Top" FontSize="17"/>
        <Label Content="Title" HorizontalAlignment="Left" Margin="12,108,0,0" VerticalAlignment="Top" Height="37" Width="51" FontSize="17" RenderTransformOrigin="0.694,0.785"/>
        <Label Content="Author" HorizontalAlignment="Left" Margin="12,155,0,0" VerticalAlignment="Top" Height="37" Width="74" FontSize="17"/>
        <Label Content="Published Date" HorizontalAlignment="Left" Margin="9,197,0,0" VerticalAlignment="Top" Height="37" Width="142" FontSize="17"/>
        <Label Content="Genre" HorizontalAlignment="Left" Margin="12,239,0,0" VerticalAlignment="Top" Height="37" Width="66" FontSize="17" RenderTransformOrigin="0.758,-0.977"/>
        <Label Content="Price" HorizontalAlignment="Left" Margin="12,281,0,0" VerticalAlignment="Top" Height="37" Width="66" FontSize="17" RenderTransformOrigin="0.672,-0.869"/>


        <TextBox x:Name="txtbTITLE" HorizontalAlignment="Left" Margin="156,108,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="584" Height="37"/>
        <TextBox x:Name="txtbAUTHOR" HorizontalAlignment="Left" Margin="156,152,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="584" Height="40"/>
        <TextBox x:Name="txtbPUBLISHED_DATE" HorizontalAlignment="Left" Margin="156,197,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="584" Height="37"/>


        <TextBox x:Name="txtbGENRE" HorizontalAlignment="Left" Margin="156,242,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="584" Height="34"/>
        <TextBox x:Name="txtbPRICE" HorizontalAlignment="Left" Margin="156,281,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="584" Height="37"/>

        <ComboBox x:Name="cbFilter1" HorizontalAlignment="Left" Margin="156,59,0,0" VerticalAlignment="Top" Width="276" Height="44" SelectionChanged="cbFilter1_SelectionChanged" />
        <ComboBox x:Name="cbFilter2" HorizontalAlignment="Left" Margin="464,59,0,0" VerticalAlignment="Top" Width="276" Height="44" SelectionChanged="cbFilter2_SelectionChanged"  />

        <Button x:Name="BTN_ADD" Content="ADD/CREATE" HorizontalAlignment="Left" Margin="156,334,0,0" VerticalAlignment="Top" Height="35" Width="276" Click="BTN_ADD_Click"/>
        <Button x:Name="BTN_UPDATE" Content="UPDATE" Margin="464,334,0,0" VerticalAlignment="Top" Height="35" Click="BTN_UPDATE_Click" HorizontalAlignment="Left" Width="276"/>
        <Button Content="CLEAR" HorizontalAlignment="Left" Margin="328,406,0,0" VerticalAlignment="Top" Height="40" Width="240" Click="Button_Click"/>




    </Grid>
</Window>
